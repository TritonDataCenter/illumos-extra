set -o errexit

VERS=${1}

PREFIX=${DESTDIR}/usr
LIBDIR=${PREFIX}/lib/amd64/pcsc/drivers/ifd-ccid.bundle/Contents

source ../install.subr

mkdir -p $PREFIX $LIBDIR $LIBDIR/Solaris

cd ${VERS}

_install N src/Info.plist $LIBDIR/Info.plist 644
_install D src/.libs/libccid.so $LIBDIR/Solaris/libccid.so 555
