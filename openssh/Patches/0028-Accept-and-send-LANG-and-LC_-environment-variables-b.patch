+	opt_array_append("[default]", 0, "AcceptEnv",
+	    &options->accept_env, &options->num_accept_env,
+	    "LC_COLLATE");
+	opt_array_append("[default]", 0, "AcceptEnv",
+	    &options->accept_env, &options->num_accept_env,
+	    "LC_TIME");
+	opt_array_append("[default]", 0, "AcceptEnv",
+	    &options->accept_env, &options->num_accept_env,
+	    "LC_NUMERIC");
+	opt_array_append("[default]", 0, "AcceptEnv",
+	    &options->accept_env, &options->num_accept_env,
+	    "LC_MONETARY");
+	opt_array_append("[default]", 0, "AcceptEnv",
