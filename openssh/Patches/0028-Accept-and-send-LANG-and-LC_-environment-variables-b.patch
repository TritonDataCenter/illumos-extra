+static void
+opt_array_delete(const char *file, const int line, const char *directive,
+    char ***array, u_int *lp, const char *s)
+{
+	u_int i, j;
+	for (i = 0; i < *lp; ++i) {
+		if (strcmp((*array)[i], s) == 0) {
+			free((*array)[i]);
+			for (j = i + 1; j < *lp; ++j) {
+				(*array)[j - 1] = (*array)[j];
+			}
+			(*lp)--;
+		}
+	}
+}
