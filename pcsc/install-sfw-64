set -o errexit

VERS=${1}

PREFIX=${DESTDIR}/usr
BINDIR=${PREFIX}/bin
SBINDIR=${DESTDIR}/usr/sbin
LIBDIR=${PREFIX}/lib/amd64
INCDIR=${PREFIX}/include/PCSC

HDRS="debuglog.h ifdhandler.h pcsclite.h reader.h winscard.h wintypes.h"

source ../install.subr

mkdir -p $PREFIX $LIBDIR $INCDIR

cd ${VERS}

_install D src/.libs/libpcsclite.so.1.0.0 ${LIBDIR}/libpcsclite.so.1.0.0 0555
_install L libpcsclite.so.1.0.0 ${LIBDIR}/libpcsclite.so

_install E src/pcscd ${SBINDIR}/pcscd 0555
_install N src/spy/pcsc-spy ${BINDIR}/pcsc-spy 0555
_install N ../pcscd.xml ${DESTDIR}/lib/svc/manifest/system/pcscd.xml 0444
_install N ../system-pcscd ${DESTDIR}/lib/svc/method/system-pcscd 0555

for hdr in $HDRS; do
    _install H src/PCSC/$hdr ${INCDIR}/$hdr
done
