set -o errexit

VERS=${1}

PREFIX=${DESTDIR}/usr
LIBDIR=${PREFIX}/lib/amd64
INCDIR=${PREFIX}/include

source ../install.subr

mkdir -p $PREFIX $LIBDIR $INCDIR

cd ${VERS}

_install D libusb/.libs/libusb-1.0.so.0 ${LIBDIR}/libusb-1.0.so.0 555
_install L libusb-1.0.so.0 ${LIBDIR}/libusb-1.0.so
_install H libusb/libusb.h ${INCDIR}/libusb.h
